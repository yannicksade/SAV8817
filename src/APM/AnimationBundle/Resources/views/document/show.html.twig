{% extends "APMAdminBundle:_Main:layout.html.twig" %}

{% block body %}
    <h1>Document</h1>

    <table>
        <tbody>
        <tr>
            <th>Description</th>
            <td>{{ document.code }}</td>
        </tr>
        <tr>
            <th>Objet</th>
            <td>{{ document.objet }}</td>
        </tr>
        <tr>
            <th>Urlcontenu</th>
            <td>{{ document.urlContenu }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('apm_animation_base_documentaire_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('apm_animation_base_documentaire_edit', { 'id': document.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('apm_animation_base_documentaire_new') }}">Add a new one</a>
        </li>

        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

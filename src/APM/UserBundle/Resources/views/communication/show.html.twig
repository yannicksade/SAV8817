{% extends "APMAdminBundle:_Main:layout.html.twig" %}

{% block body %}
    <h1>Communication</h1>

    <table>
        <tbody>
        <tr>
            <th>Code</th>
            {% if communication.message==null %}{% else %}{{ communication.message.code }}{% endif %}
        </tr>
        <tr>
            <th>Datedevigueur</th>
            <td>{% if communication.dateDeVigueur %}{{ communication.dateDeVigueur|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Duree</th>
            <td>{{ communication.dateFin|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Ref√©rence</th>
            <td>{{ communication.reference }}</td>
        </tr>
        <tr>
            <th>Valide</th>
            <td>{% if communication.valide %}Yes{% else %}No{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('apm_user_communication_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('apm_user_communication_edit', { 'id': communication.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('apm_user_communication_new') }}">Add a new one</a>
        </li>

        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

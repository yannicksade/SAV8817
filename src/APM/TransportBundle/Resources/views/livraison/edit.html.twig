{% extends "APMAdminBundle:_Main:layout.html.twig" %}
{% block body %}
    <h1>Livraison edit</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="Update"/>
    {{ form_end(edit_form) }}

    <ul>
        {% if livraison.boutique %}
            <li>
                <a href="{{ path('apm_transport_livraison_boutique_index', {'id':livraison.boutique.id}) }}">Retour aux
                    livraisons de la boutique</a>
            </li>
        {% else %}
            <li>
                <a href="{{ path('apm_transport_livraison_index') }}">Retour aux livraisons de l'utilisateur</a>
            </li>
        {% endif %}
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends "APMAdminBundle:_Main:layout.html.twig" %}

{% block body %}
    <h1>Liste des transporteurs</h1>

    <table>
        <thead>
        <tr>
            <th>Code</th>
            <th>Livreur Boutique</th>
            <th>Matricule</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for profile_transporteur in profile_transporteurs %}
            <tr>
                <td>
                    <a href="{{ path('apm_transport_transporteur_show', { 'id': profile_transporteur.id }) }}">{{ profile_transporteur.code }}</a>
                </td>
                <td>{% if profile_transporteur.livreurBoutique %}Yes{% else %}No{% endif %}</td>
                <td>{{ profile_transporteur.matricule }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('apm_transport_transporteur_show', { 'id': profile_transporteur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('apm_transport_transporteur_edit', { 'id': profile_transporteur.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('apm_transport_transporteur_deleteFromList', { 'id': profile_transporteur.id }) }}">delete</a>
                        </li>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('apm_transport_transporteur_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}

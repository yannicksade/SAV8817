{% extends "APMAdminBundle:_Main:layout.html.twig" %}

{% block body %}
    <h1>profile_transporteur</h1>

    <table>
        <tbody>
        <tr>
            <th>Code</th>
            <td>{{ profile_transporteur.code }}</td>
        </tr>
        <tr>
            <th>Livreurboutique</th>
            <td>{% if profile_transporteur.livreurBoutique %}Yes{% else %}No{% endif %}</td>
        </tr>
        <tr>
            <th>Matricule</th>
            <td>{{ profile_transporteur.matricule }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('apm_transport_transporteur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('apm_transport_transporteur_edit', { 'id': profile_transporteur.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('apm_transport_transporteur_new') }}">Add a new one</a>
        </li>

        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

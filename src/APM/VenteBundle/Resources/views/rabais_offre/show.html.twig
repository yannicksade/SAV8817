{% extends "APMAdminBundle:_Main:layout.html.twig" %}

{% block body %}
    <h1>Rabais_offre</h1>

    <table>
        <tbody>
        <tr>
            <th>Datelimite</th>
            <td>{% if rabais_offre.dateLimite %}{{ rabais_offre.dateLimite|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Nombredefois</th>
            <td>{{ rabais_offre.nombreDefois }}</td>
        </tr>
        <tr>
            <th>Prix update</th>
            <td>{{ rabais_offre.prixUpdate }}</td>
        </tr>
        <tr>
            <th>Quantitemin</th>
            <td>{{ rabais_offre.quantiteMin }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ rabais_offre.code }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('apm_vente_rabais_offre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('apm_vente_rabais_offre_edit', { 'id': rabais_offre.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('apm_vente_rabais_offre_new') }}">Add a new one</a>
        </li>

        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends "APMAdminBundle:_Main:layout.html.twig" %}

{% block body %}
    <h1>Categorie</h1>

    <table>
        <tbody>
        <tr>
            <th>Description</th>
            <td>{{ categorie.description }}</td>
        </tr>
        <tr>
            <th>Designation</th>
            <td>{{ categorie.designation }}</td>
        </tr>
        <tr>
            <th>Livrable</th>
            <td>{% if categorie.livrable %}Yes{% else %}No{% endif %}</td>
        </tr>
        <tr>
            <th>Code</th>
            <td>{{ categorie.code }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ categorie.image }}</td>
        </tr>
        <tr>
            <th>Offres</th>
            {% for offre in categorie.offres %}
                <td>{{ offre.designation }}</td>
            {% endfor %}
        </tr>
        <tr>
            <th>Categorie parent</th>
            <td> {% if categorie.categorieCourante==null %} - {% else %} {{ categorie.categorieCourante.designation }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('apm_vente_categorie_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('apm_vente_categorie_edit', { 'id': categorie.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('apm_vente_categorie_new') }}">Add a new one</a>
        </li>
        {% if delete_form %}
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
